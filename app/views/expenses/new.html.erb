<div class="expenses-new d-flex flex-column justify-content-center align-items-center" data-controller="slider">
  <h5>Add an expense</h5>
  <br>
  <%# <p style="color: #E64C3C">Warning:</p>
  <p class="text-center">The monsters may grow!</p> %>
  <%= simple_form_for [@challenge.treasure_chest, @challenge, @expense] do |f| %>
    <%= f.input :amount, label: 'How much did you spend?' %>
    <h4 data-slider-target="amount">0</h4>
    <%= f.input :amount, as: :range, selected: 0, label: false, input_html: {value: 0, data: { action: "input->slider#updateAmount"}}, placeholder: "amount" %>
    <%= f.input :expense_date,
                as: :string,
                input_html: { data: { controller: "datepicker" },
                            placeholder: "When did you spend it?",
                            enableTime: true,
                            dateFormat: "Y-m-d H:i",
                            } %>
    <div class="text-center">
      <%= f.button :submit, 'Enrage the monster!' %>
    </div>
  <% end %>
</div>
