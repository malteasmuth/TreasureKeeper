<%# This is going to be where the map shows and the game takes place %>

  <div class="main-page">
    <% @challenges.each do |challenge| %>
      <h2>Your challenge: <%= challenge.name %></h2>
      <h3>Status: <%= challenge.status %>
      <p><%= link_to "continue", treasure_chest_challenge_path(challenge.treasure_chest, challenge), class: "btn" %></p>
    <% end %>
  </div>
