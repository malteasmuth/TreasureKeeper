<div class="players-show d-flex flex-column justify-content-center align-items-center">
  <h5 class="mb-4">Player Information</h5>
    <%= image_tag "Icons/#{@player.icon_creator}" , width: 50, crop: :fill, class: "mr-3 rounded-circle" %>
  <div class="transparent-bg text-center border p-3 text-break" style="border-radius: 15px; width: 355px;">
    <p class="text-break"><span style="color: #F29C1F"><%= @player.username %></span></p>
    <p>Hitpoints: <span style="color: #F29C1F"><%= [@player.hitpoints.to_i, 0].max %></span></p>
    <p>Healthpoints: <span style="color: #F29C1F"><%= [@player.healthpoints.to_i, 0].max %></span></p>
    <p>Rubies: <span style="color: #F29C1F"><%= [@player.rubies.to_i, 0].max %></span></p>
    <p>Level: <span style="color: #F29C1F"><%= [@player.level, 0].max %></span></p>
    <p>Experience: <span style="color: #F29C1F"><%= [@player.experience_points, 0].max %></span></p>

    <% if @player.experience_points >= @player.level * 10 %>
    <%= link_to "level up", player_level_up_path(@player) %>
    <% end %>
    <div class="mb-2">
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
    </div>
  </div>
</div>
