<div class="players-show d-flex flex-column justify-content-center align-items-center">
  <div class="transparent-bg text-center border p-3 text-break" style="border-radius: 15px; width: 355px;">
    <div class="mb-5">
      <h1 style="color: #F29C1F">~<%= @player.username.upcase %>~</h1>
      <%= image_tag "Icons/#{@player.icon_creator}" , width: 50, crop: :fill, class: "rounded-circle" %>
    </div>

    <div class="d-flex justify-content-around mb-3">
      <span style="color: #F29C1F;"><%= image_tag asset_path("Icons/life_full2.png"), class: "icon" %><%= [@player.healthpoints.to_i, 0].max %></span>
      <span style="color: #F29C1F;"><%= image_tag asset_path("Icons/swords.png"), class: "icon" %> <%= [@player.hitpoints.to_i, 0].max %></span>
      <span style="color: #F29C1F;"><%= image_tag asset_path("Icons/ruby.png"), class: "icon" %> <%= [@player.rubies.to_i, 0].max %></span>
    </div>
    <div class="d-flex justify-content-around mb-3">
      <span style="color: #F29C1F;"><%= image_tag asset_path("Icons/experience.png"), class: "icon" %> <%= [@player.experience_points, 0].max %></span>
      <% if @player.experience_points >= @player.level * 10 %>
        <%= link_to "level up", player_level_up_path(@player), class: "button" %>
      <% else %>
        <%= link_to "level up", "#", class: "button disabled", disabled: true %>
      <% end %>
    <span style="color: #F29C1F;"><%= image_tag asset_path("Icons/level_up.png"), class: "icon" %> <%= [@player.level, 0].max %></span>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "button" %>
  </div>
</div>
