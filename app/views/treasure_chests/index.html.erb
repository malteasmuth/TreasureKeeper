<div class="treasure-chests d-flex flex-column justify-content-center align-items-center">
  <div class="transparent-bg overflow-auto border p-3" style="width: 300px; max-height: 500px; border-radius: 15px;">
    <div class="d-flex flex-column align-items-center">
      <% if @treasure_chests.empty? %>
        <p class="text-center">You have no chests yet...</p>
      <% else %>
        <% @treasure_chests.each do |treasure_chest| %>
          <div class="row col-12 mb-3 text-break border p-3" style="border-radius: 15px;">
            <%= link_to treasure_chest_path(treasure_chest), class: "d-flex justify-content-between align-items-center" do %>
              <div class="col-3">
                <%= image_tag asset_path("Icons/treasure.png"), alt: "Treasure Icon", class: "treasure-image" %>
              </div>
              <div class="col-9">
                <span style="font-weight: bold; color: #F29C1F; margin-top: 5px;"><%= treasure_chest.name %></span>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="text-center mt-5">
    <%= link_to "New chest", new_treasure_chest_path, class: "btn" %>
  </div>
</div>
