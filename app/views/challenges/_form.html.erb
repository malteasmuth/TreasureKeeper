<%= simple_form_for [@treasure_chest, @challenge], data: { controller: "slider" } do |f| %>
  <div id="slider"></div>
  <%= f.input :budget, label: false, placeholder: "Budget" %>
  <p>Selected Value: <span data-target="slider.selectedValue">0</span></p>
  <%= f.input :name, label: false, placeholder: "Challenge Name" %>
  <%= f.input :description, label: false, placeholder: "Description" %>
  <%= f.input :end_date,
              as: :string,
              label: false,
              input_html: {
                data: {
                  controller: "datepicker"
                },
                placeholder: "End Date:",
                enableTime: true,
                dateFormat: "Y-m-d H:i"
              } %>
  <div class="text-center">
    <%= f.button :submit, "New Challenge", class: "btn" %>
  </div>
<% end %>
