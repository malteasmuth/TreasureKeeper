<div class="challenges-show pt-3 d-flex flex-column justify-content-center align-items-center overflow-auto">
  <div class="transparent-bg mb-2 pt-3 px-3 border d-flex flex-column align-items-center overflow-auto" style="border-radius: 10px; width: 355px;">
    <h6 class="text-break" style="font-size: 15px;"><span style="color: #F29C1F"><%= @challenge.name %></span></h6>
    <!-- <h6 class="text-break" style="font-size: 10px;">Description: <span style="color: #F29C1F"><%= @challenge.description %></span></h6>
    <h6 class="text-break" style="font-size: 10px;">Status: <span style="color: #F29C1F"><%= @challenge.status %></span></h6>
    <h6 class="text-break" style="font-size: 10px;">Deadline:<span style="color: #F29C1F"><%= @challenge.end_date %></span></h6>-->
    <h6 class="text-break" style="font-size: 15px;"><%= (@challenge.end_date - Date.today).to_i %> days left!</h6>
  </div>
  <div class="transparent-bg mb-2 pt-3 px-3 border d-flex flex-column justify-content-center align-items-center" style="border-radius: 10px; width: 355px;">
    <p>Budget: <span style="color: #F29C1F">$<%= [@challenge.budget.to_i, 0].max %></span></p>
    <p>Expenses: </p>

    <div class="overflow-auto" style="max-height: 80px;">
      <%# calculate sum of expenses %>
      <% sum = 0 %>
      <% @expenses.each do |expense| %>
        <div class="d-flex">
          <p style="color: #F29C1F; margin-right: 10px;">$<%= [expense.amount.to_i, 0].max  %></p>
          <p style="color: #F29C1F;"><%= expense.expense_date.strftime("%b %d") %></p>
        </div>

        <% sum += expense.amount %>
      <% end %>
    </div>
    <p>Total: <span style="color: #F29C1F">$<%= sum %></span></p>
  </div>

  <div class="transparent-bg mb-2 pt-2 px-2 border d-flex flex-column align-items-center" style="border-radius: 10px; width: 355px;">
    <div class="d-flex">
      <div class="d-flex flex-column" style="margin-right: 100px;">
        <span><%= image_tag "Icons/#{@player.icon_creator}" , width: 50, crop: :fill, class: "mr-3 rounded-circle" %></span>
        <div class="health-bar mt-2">
          <div class="health-bar-fill" style="width: <%= [@player.healthpoints.to_i, 0].max %>%; background-color: #41C835;"></div>
        </div>
      </div>
      <div class="d-flex flex-column">
        <span><%= image_tag "Icons/#{@monster.icon_creator}" , width: 50, crop: :fill, class: "mr-3 rounded-circle" %></span>
        <div class="health-bar mt-2">
          <div class="health-bar-fill" style="width: <%= [@monster.hitpoints.to_i, 0].max %>%; background-color: #41C835;"></div>
        </div>
      </div>
    </div>
    <div>
      <p style="color: #F29C1F">Monster rage: <%= [@monster_rage.to_i, 0].max %> %</p>
      <p style="color: #41C835">Your hitpoints: <%= [@player.hitpoints.to_i, 0].max %></p>
    </div>
  </div>
  <div class="d-flex flex-column align-items-center" data-controller="challenges" data-chest-url-value="<%= asset_path("chest-slam.mp3") %>">
    <span style="margin-bottom: 5px;">
      <%= link_to "Enrage the monster", new_treasure_chest_challenge_expense_path(@challenge.treasure_chest, @challenge),
      class: "enrage-button", data: { target: "challenges.enrage", action: "click->challenges#click" } %>
    </span>
    <span>
      <%= link_to "Attack!", treasure_chest_challenge_attack_path(@challenge.treasure_chest, @challenge),
      class: "button", data: { target: "challenges.attack", action: "click->challenges#click" } %>
    </span>
  </div>
</div>
