<div class="expenses-new container d-flex flex-column align-items-center">
  <h6>Treasure Keeper</h6>
  <%= image_tag asset_path("Icons/treasure.png"), class: "icon" %>
</div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "E-mail address" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "Password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
