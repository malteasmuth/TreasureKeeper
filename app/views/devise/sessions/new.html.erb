<h2>Treasure Keeper</h2>

<div class="container">
  <div><%= cl_image_tag("Treasure Keeper/treasure.png", title: "Treasure Keeper/treasure.png",
      width: 50, crop: :fill) %>
</div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "E-mail address" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "Password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
